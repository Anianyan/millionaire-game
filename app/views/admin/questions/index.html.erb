<div style="margin-left:30%">
    <div class="w3-container">
          <p id="notice"><%= notice %></p>
            <h1>Questions</h1>
            <table>
                <thead>
                <tr>
                    <th>Question:</th>
                    <th>Level</th>
                    <th>Score</th>
                    <th>Answers</th>
                    <th colspan="3"></th>
                </tr>
                </thead>

                <tbody>
                <% @questions.each do |question| %>
                    <tr>
                    <td><%= question.question_text %></td>
                    <td><%= question.level %></td>
                    <td><%= question.score %></td>
                    <td><%= question.answers_count %></td>
                    <td><%= link_to 'Edit', edit_admin_question_path(question.id) %></td>
                    <td><%= link_to 'Destroy', admin_question_path(question.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
    </div>
</div>
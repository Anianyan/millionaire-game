<div class="container-fluid">
   <h4 class="text-center">Score: <span id="game-score" >0</span></h4>
   <div class="modal-dialog">
      <div class="modal-content" id="question" data-question-id="<%= @question.id %>">
         <div class="modal-header">
            <h3 id="question-text"><span class="label label-warning" id="qid">1</span><%= @question.question_text %></h3>
         </div>
         <div class="modal-body">
            <div class="col-xs-3 col-xs-offset-5">
               <div id="loadbar" style="display: none;">
                  <div class="blockG" id="rotateG_01"></div>
                  <div class="blockG" id="rotateG_02"></div>
                  <div class="blockG" id="rotateG_03"></div>
                  <div class="blockG" id="rotateG_04"></div>
                  <div class="blockG" id="rotateG_05"></div>
                  <div class="blockG" id="rotateG_06"></div>
                  <div class="blockG" id="rotateG_07"></div>
                  <div class="blockG" id="rotateG_08"></div>
               </div>
            </div>
            <div class="quiz" id="quiz" data-toggle="buttons">
               <% @question.answers.each do |answer| %>
               <label class="element-animation1 btn btn-lg btn-primary btn-block">
               <span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span>
               <input class="answer-input" type="radio" data-id="<%= answer.id %>" name="answer" value="<%= answer.id %>"><%= answer.answer_text %>
               </label>
               <% end %>
            </div>
         </div>
         <div class="modal-footer text-muted flex-column">
            <h4 id="answer"></h4>
            <h4 id="correct-answer" class="text-info"></h4>
         </div>
      </div>
      <div id="end-game" class="hide">
         <h1 class="text-center">End Game</h1>
      </div>
   </div>
   <div id="next-btn" class="form-group text-right mt-3">
      <button type="button" class="btn btn-primary">Next</button>
   </div>
</div>